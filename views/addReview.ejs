<%- include('partials/header') -%>

<div class="register-container">
    <h2 class="review-title">Write a Review</h2>

    <form id="submitReview" class="register-form">

        <h3 id="movieTitle" class="movie-title-loader">
            <div class="loader"></div>
        </h3>

        <label for="rating">Rating (1-10)</label>
        <input type="number" id="rating" min="1" max="10" required>

        <label for="reviewText">Your Review</label>
        <textarea id="reviewText" rows="5" placeholder="Write your thoughts..." required></textarea>

        <button type="submit">Submit Review</button>
    </form>
</div>

<script>
    window.reviewData = {
        tmdb_id: "<%= movie_id %>",
        media_type: "<%= media_type %>",
        api_key: "<%= process.env.TMDB_API_KEY %>"
    };
</script>

<script src="/addReview.js"></script>

<%- include('partials/footer') -%>
